<style>
  .signup-form {
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  .field {
    margin-bottom: 10px;
  }

  .label {
    font-weight: bold;
  }

  .input-field {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 3px;
  }

  .actions {
    text-align: center;
    margin-top: 20px;
  }

  .submit-button {
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 3px;
    cursor: pointer;
  }

  .error-messages {
    color: red;
    margin-bottom: 10px;
  }

  .password-info {
    font-size: 12px;
    margin-top: 5px;
  }

  .links {
    text-align: center;
    margin-top: 20px;
  }
</style>

<div class="signup-form">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'signup-form'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'input-field' %>
    </div>

    <div class="field">
      <%= f.label :lastname %><br>
      <%= f.text_field :lastname, autofocus: true, autocomplete: "last name", class: 'input-field' %>
    </div>

    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-field' %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em class="password-info">(Minimum <%= @minimum_password_length %> characters)</em>
      <% end %><br>
      <%= f.password_field :password, autocomplete: "new-password", class: 'input-field' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input-field' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'submit-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
